<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-7-8">
    <div class="text-center">
      <h1 class="mt-6 text-2xl font-bold text-gray-700">Activate Account</h1>
      <p class="mt-4">Create your password to activate your account.</p>
    </div>

    <div>
      {% form 'activate_customer_password', class: 'space-y-4', id: 'activate_account_form' %}
        {% if form.errors %}
          <div class="border border-red-400 bg-red-100 rext-red-700 px-4 py-3">
            <div class="flex flex-row items-center w-full mb-3">
              <div class="text-red-500">
                {% render 'icon-failed' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Error!
              </div>
            </div>
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <div class="my-2">
          <label for="password">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border placeholder-gray-300 text-gray-700"
            placeholder="Password">
        </div>

        <div class="my-2">
          <label for="password_confirmation">Confirm Password</label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="password_confirmation"
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border placeholder-gray-300 text-gray-700"
            placeholder="Confirm your Password">
        </div>

        <div class="flex flex-col gap-2 md:flex-row">
          <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-700 hover:bg-gray-900">
            Activate Account
          </button>
          <button
            type="submit"
            name="decline"
            class="relative w-full py-2 px-4 text-sm font-medium text-gray-700 border border-gray-700 hover:bg-gray-100">
            Decline Invitation
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>