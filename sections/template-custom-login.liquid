<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8" x-data="{ loginForm: true, pwRecoverForm: false }">
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-medium mt-6">Sign In To Your Account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="border border-red-400 bg-red-100 rext-red-700 px-4 py-3">
            <div class="flex flex-row items-center w-full mb-3">
              <div class="text-red-500">
                {% render 'icon-failed' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Error!
              </div>
            </div>
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        <div class="my-2">
          <label for="email_address" class="sr-only">Email Address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            placeholder="Email Address"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>

        {% if form.password_needed %}
          <div class="my-2">
            <label for="password" class="sr-only">Password</label>
            <input
              type="password"
              name="customer[password]"
              id="password"
              placeholder="Password"
              placeholder="current-password"
              class="border py-3 px-4 mb-3 text-gray-700 w-full">
          </div>
        {% endif %}

        <div class="my-2 text-sm">
          <a
            x-on:click="loginForm = false; pwRecoverForm = true"
            href="#"
            class="underline text-gray-500 hover:text-gray-900">
            Forgot your password?
          </a>
        </div>
        <div>
          <button type="submit" class="relatve w-full px-4 py-2 font-medium text-white bg-gray-900 hover:bg-gray-600">Login</button>
        </div>

      {% endform %}
    </div>

    {% if shop.checkout.guest_login %}
      <hr class="my-12">

      <div>
        <h2 class="text-center text-3xl font-medium mt-6">Continue as a Guest</h2>
      </div>
      {% form 'guest_login' %}
        <div>
          <button type="submit" class="relatve w-full px-4 py-2 font-medium text-white bg-gray-900 hover:bg-gray-600">Continue</button>
        </div>
      {% endform %}
    {% endif %}

  </div>
  <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
    <div>
      <h2 class="text-center text-3xl font-medium mt-6">Recover Your Password</h2>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="border border-red-400 bg-red-100 rext-red-700 px-4 py-3">
            <div class="flex flex-row items-center w-full mb-3">
              <div class="text-red-500">
                {% render 'icon-failed' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Error!
              </div>
            </div>
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        <div class="my-2">
          <label for="email" class="sr-only">Email Address</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            placeholder="Email Address"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>

        <div>
          <button type="submit" class="relatve w-full px-4 py-2 font-medium text-white bg-gray-900 hover:bg-gray-600">Recover Password</button>
        </div>

        <div class="mt-8 text-sm">
          <a
            x-on:click="loginForm = true; pwRecoverForm = false"
            href="#"
            class="underline text-gray-500 hover:text-gray-900">Back to login</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>